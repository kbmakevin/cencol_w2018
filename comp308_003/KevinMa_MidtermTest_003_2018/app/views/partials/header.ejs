<!-- views/partials/head.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%= title %>
    </title>

    <!-- CSS Section -->
    <!-- 2018.03.07 - 18:40:13: Removed CDN, using npm loaded modules instead -->
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
</head>

<body style="background-color: #bdf6f7">

    <!-- 2018.03.07 - 18:54:43 added navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">COMP308 Midterm Test</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item <% if(title == 'Home') { %> active <% } %>">
                    <a class="nav-link" href="/">
                        <i class="fa fa-lg fa-home"></i> Home</a>
                </li>

                <li class="nav-item <% if(title == 'Surveys') { %> active <% } %>">
                    <a class="nav-link" href="/surveys">
                        <i class="fa fa-lg fa-list"></i> Surveys List</a>
                </li>

                <li class="nav-item <% if(title == 'Add a new Survey') { %> active <% } %>">
                    <a class="nav-link" href="/surveys/add">
                        <i class="fa fa-lg fa-plus"></i> Add a Survey </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="card text-center">
            <!-- this works because in config/express.js we are serving static files from public/ -->
            <img src="img/banner.jpg" alt="Banner of Various Games" class="card-img-top">
            <div class="card-body">
                <p class="card-text">
                    <h1>
                        <%= title %>
                    </h1>
                </p>
                <br>