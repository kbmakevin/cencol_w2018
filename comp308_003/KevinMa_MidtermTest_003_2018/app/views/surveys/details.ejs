<% include ../partials/header.ejs %>

    <form method="post">
        <!-- Survey ID -->
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Survey ID:</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" placeholder="30" required name="surveyId" required value="<%= surveys.surveyId %>"
                    required <% if(title=='Survey Details' ) { %> disabled
                <% } %>>
            </div>
        </div>

        <!-- Game Genre -->
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Game Genre:</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" placeholder="Strategy" required name="gameGenre" value="<%= surveys.gameGenre %>"
                    required>
            </div>
        </div>

        <!-- Days Per Year -->
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Days Played Per Year:</label>
            </div>
            <div class="col-md-5">
                <input type="number" class="form-control" placeholder="35" required name="daysPerYear" value="<%= surveys.daysPerYear %>"
                    required min="0" max="365">
            </div>
        </div>

        <!-- Age -->
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Your age (years):</label>
            </div>
            <div class="col-md-5">
                <input type="number" class="form-control" placeholder="31" required name="age" value="<%= surveys.age %>" required min="0">
            </div>
        </div>


        <!-- Buttons -->
        <button type="submit" class="btn btn-outline-success">
            <i class="fa fa-check-square-o"></i>
            <% if(title=='Survey Details' ) { %> Update
                <% } else { %>
                    Add to Surveys
                    <% }%>
        </button>
        <a href="/surveys" class="btn btn-outline-warning">
            <i class="fa fa-undo"> Cancel</i>
        </a>

    </form>

    <% include ../partials/footer.ejs %>