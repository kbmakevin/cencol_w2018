<% include ./partials/header %>

    <form method="post">
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Username:</label>
            </div>
            <div class="col-md-5">
                <input type="email" class="form-control" aria-describedby="helpId" placeholder="jdoe@my.centennialcollege.ca" required name="username">
                <small id="helpId" class="form-text text-muted text-justify">Note: Your username is the email you registered an account with.</small>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Password:</label>
            </div>
            <div class="col-md-5">
                <input type="password" class="form-control" name="password" required>
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-4">
                <div class="btn-group d-flex">
                    <button type="submit" class="btn btn-outline-success w-100">Login</button>
                    <!-- this link is made to look like a button, will redirect to /signup with a GET request, can handle this in our routes.js-->
                    <a href="/signup" class="btn btn-outline-info w-100">Signup</a>
                    <!-- NOTE: THIS IS TEMPORARY! Remove this later, only allow for admin authority! -->
                    <a href="/viewcustomerfeedback" class="btn btn-outline-info w-100">View Customer Feedback</a>
                </div>
            </div>
        </div>
    </form>

    <% include ./partials/footer %>