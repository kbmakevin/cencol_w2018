<% include ./partials/header %>

    <form method="post">
        <div class="form-group row">
            <div class="col-4 text-right">
                <label>First Name:</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" disabled value='<%= fname %>'>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Last Name:</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" disabled value='<%= lname %>'>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Email:</label>
            </div>
            <div class="col-md-5">
                <input type="email" class="form-control" disabled value='<%= email %>'>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Age:</label>
            </div>
            <div class="col-md-5">
                <input type="number" class="form-control" disabled value='<%= age %>'>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Program of Study:</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" disabled value='<%= program %>'>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4 text-right">
                <label>Your comments:</label>
            </div>
            <div class="col-md-5">
                <textarea class='form-control' name="comments" required></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-4">
                <div class="btn-group d-flex">
                    <button type="submit" class="btn btn-outline-success w-100">Submit</button>
                    <a href="/" class="btn btn-outline-danger w-100">Logout</a>
                </div>
            </div>
        </div>
    </form>

    <% include ./partials/footer %>